#include <string>
#define ZERO_VERSION "@PROJECT_VERSION@"
#define ZERO_VERSION_MAJOR "@PROJECT_VERSION_MAJOR@"
#define ZERO_VERSION_MINOR "@PROJECT_VERSION_MINOR@"
#define ZERO_VERSION_PATCH "@PROJECT_VERSION_PATCH@"

class ZEROVersion {
public:
  ZEROVersion(std::string &major, std::string &minor, std::string &patch) {
	 major = ZERO_VERSION_MAJOR;
	 minor = ZERO_VERSION_MINOR;
	 patch = ZERO_VERSION_PATCH;
  }
  ZEROVersion(std::string &version) { version = ZERO_VERSION; }
};